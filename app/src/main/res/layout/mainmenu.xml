<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/temp">

    <!-- BIG CIRCULAR PLAY BUTTON -->

    <!-- LEFT: HELP / UNITS BUTTON (SMALLER) -->
    <ImageButton
        android:id="@+id/playBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/btn_play_circle"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@android:color/white" />

    <Button
        android:id="@+id/helpBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_small_round"
        android:text="@string/help"
        android:textColor="@android:color/white"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintBottom_toBottomOf="@id/playBtn"
        app:layout_constraintEnd_toStartOf="@id/playBtn"
        android:layout_marginEnd="16dp" />

    <!-- RIGHT: QUIT BUTTON (SAME SIZE AS HELP) -->
    <Button
        android:id="@+id/quitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_small_round"
        android:text="quit"
        android:textColor="@android:color/white"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintBottom_toBottomOf="@id/playBtn"
        app:layout_constraintStart_toEndOf="@id/playBtn"
        android:layout_marginStart="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>